<div class="modal-header">
    <h5 class="modal-title"><i class="bi bi-check2-circle me-2"></i>Complete Sprint</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

{{ form_start(form, {attr: { class: 'js-ajax-form', 'data-refresh-target': '#sprintsWrap' }}) }}
<div class="modal-body">
    <p class="mb-2">Complete sprint <strong>{{ sprint.name }}</strong>?</p>
    <div class="alert alert-info">Incomplete tickets will be moved per your selection below.</div>

    <ul class="list-group">
        {% for c in form.incompleteStrategy %}
            <li class="list-group-item d-flex align-items-start">
                {{ form_widget(c, { attr: { class: 'form-check-input me-3 mt-1' } }) }}
                <div>
                    <div class="fw-semibold">{{ c.vars.label }}</div>
                    {% if c.vars.attr['data-help'] is defined %}
                        <div class="small text-muted">{{ c.vars.attr['data-help'] }}</div>
                    {% endif %}
                </div>
            </li>
        {% endfor %}
    </ul>
    {{ form_errors(form.incompleteStrategy) }}

    {{ form_row(form.nextSprint) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-danger">Complete</button>
</div>
{{ form_end(form) }}
