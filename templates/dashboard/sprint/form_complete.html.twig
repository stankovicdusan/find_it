<div class="modal-header">
    <h5 class="modal-title"><i class="bi bi-check2-circle me-2"></i>Complete Sprint</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

{{ form_start(form, {attr: { class: 'js-ajax-form', 'data-refresh-target': '#sprintsWrap' }}) }}
<div class="modal-body">
    <p class="mb-2">Complete sprint <strong>{{ sprint.name }}</strong>?</p>
    <div class="alert alert-info">Incomplete tickets will be moved per your selection below.</div>

    {{ form_row(form.incompleteStrategy) }}
    {{ form_row(form.nextSprint) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-danger">Complete</button>
</div>
{{ form_end(form) }}
