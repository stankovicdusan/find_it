{% extends "dashboard/index.html.twig" %}

{% block content %}
    {{ parent() }}

    <div class="container">
        <div class="header">
            <h2>{{ project.title }} Board</h2>
            <div class="search-group">
                <input type="text" placeholder="Search...">
                <button>Go</button>
            </div>
        </div>

        <div class="grid">
            <div class="column">
                <div class="column-header">
                    <h3>Backlog</h3>
                    <span class="badge">11</span>
                </div>
                <div class="p-4">
                    <div class="card">
                        <p>Kreirati tickets i issue_types tabele</p>
                        <p class="project-key">DRP-11</p>
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="column-header">
                    <h3>In Progress</h3>
                    <span class="badge">1</span>
                </div>
                <div class="p-4">
                    <div class="card">
                        <p>Scrum board sa default kolonama</p>
                        <p class="project-key">DRP-17</p>
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="column-header">
                    <h3>Done</h3>
                    <span class="badge">6</span>
                </div>
                <div class="p-4">
                    <div class="card">
                        <p>Kreirati projects i project_template tabele</p>
                        <p class="project-key">DRP-3</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}