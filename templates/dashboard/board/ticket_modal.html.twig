<div class="modal-header">
    <h5 class="modal-title">{{ ticket.title }}</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Issue Type:</strong>
                <span class="badge" style="background-color: {{ ticket.color }}; color: white;">
                  {{ ticket.issueType.title }}
                </span>
            </p>
            <p><strong>Status:</strong> {{ ticket.status.title }}</p>
            <p><strong>Priority:</strong> <span class="badge {{ ticket.priorityBadge }}">{{ ticket.priority.value|capitalize }}</span></p>
            <p><strong>Assignee:</strong> {{ ticket.assignedToName }}</p>
        </div>
        <div class="col-md-6">
            <p><strong>Description:</strong></p>
            <p>{{ ticket.description|raw }}</p>
        </div>
    </div>

    <hr>

    <div class="comments-section">
        <h6>Comments</h6>
        <div class="mb-3">
            <textarea class="form-control tinymce" name="comment" rows="3" placeholder="Write a comment..."></textarea>
        </div>
        <button class="btn btn-primary btn-sm">Post Comment</button>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
