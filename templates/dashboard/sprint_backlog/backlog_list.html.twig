<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Assignee</th>
                    <th>Status</th>
                    <th class="text-end">Updated</th>
                </tr>
                </thead>
                <tbody>
                {% for t in tickets %}
                    <tr>
                        <td>
                            <a href="#" class="text-decoration-none js-open-ticket"
                               data-ticket-id="{{ t.id }}"
                               data-url="{{ path('dashboard_ticket_modal', { key: project.key, id: t.id }) }}">
                                {{ t.title }}
                            </a>
                        </td>
                        <td>
                            {% set type = t.issueType ? t.issueType.title|lower : 'task' %}
                            <span class="badge" style="background: {{ t.color }};">{{ t.issueType ? t.issueType.title : 'Task' }}</span>
                        </td>
                        <td>{{ t.assignedToName }}</td>
                        <td>
                            {{ t.status.title }}
                            {% if t.status.isFinal %}
                                <span class="badge text-bg-success ms-1">Final</span>
                            {% endif %}
                        </td>
                        <td class="text-end text-muted small">{{ t.updatedAt|date('Y-m-d H:i') }}</td>
                    </tr>
                {% else %}
                    <tr><td colspan="5" class="text-muted p-3">Backlog is empty.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
