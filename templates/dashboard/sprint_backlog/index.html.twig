    <script src="{{ asset('js/sprints.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="container-fluid py-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Sprint Backlog â€” {{ project.title }}</h3>
