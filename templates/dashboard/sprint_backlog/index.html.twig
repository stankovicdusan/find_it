{% extends "dashboard/index.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sprints.js') }}"></script>
    <script src="{{ asset('js/comments.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="container-fluid py-3">
        <div class="d-flex align-items-center mb-3">
            <h3 class="mb-0">Backlog â€” {{ project.title }}</h3>

            <div class="ms-auto d-flex gap-2">
                <button type="button"
                        class="btn btn-primary js-create-ticket"
                        data-url="{{ path('dashboard_ticket_create_form', { key: project.key }) }}">
                    <i class="bi bi-plus-lg"></i> Create Ticket
                </button>

                {% if project.isScrumProject %}
                    <button class="btn btn-primary js-open-modal"
                            data-url="{{ path('backlog_form_add', { key: project.key }) }}">
                        <i class="bi bi-plus-lg"></i> Add to sprint
                    </button>
                {% endif %}
            </div>
        </div>

        <div id="backlogWrap" data-url="{{ path('backlog_list_partial', { key: project.key }) }}">
            {% include 'dashboard/sprint_backlog/backlog_list.html.twig' with {
                project: project,
                tickets: tickets
            } %}
        </div>

        <hr class="my-4">
        <div class="d-flex align-items-center justify-content-between mb-2">
            <h5 class="mb-3">
                <i class="bi bi-check-circle text-success me-1"></i>
                Completed (final statuses)
            </h5>
            <span class="badge text-bg-success completed-tickets">{{ completedTickets|length }}</span>
        </div>

        {% if completedTickets is empty %}
            <div class="alert alert-success mb-0">No completed items in backlog.</div>
        {% else %}
            <div id="completedTickets">
                {% include 'dashboard/sprint_backlog/backlog_list.html.twig' with {
                    project: project,
                    tickets: completedTickets
                }%}
            </div>
        {% endif %}
    </div>

    <div class="modal fade" id="ticketModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content" id="ticketModalContent"></div>
        </div>
    </div>

    <div class="modal fade" id="createTicketModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="createTicketModalContent"></div>
        </div>
    </div>
{% endblock %}
