<div class="modal-header bg-primary text-white">
    <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add tickets to sprint</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

{{ form_start(form, {attr: { class: 'js-ajax-form', 'data-refresh-target': '#backlogWrap' }}) }}
{% if form._token is defined %}
    {{ form_widget(form._token) }}
{% endif %}

<div class="modal-body">
    <div class="mb-3">
        {{ form_label(form.sprint) }}
        {{ form_widget(form.sprint) }}
        {{ form_errors(form.sprint) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.tickets) }}

        <div class="d-flex flex-column gap-1">
            {% for child in form.tickets %}
                <div class="form-check">
                    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
            {% endfor %}
        </div>

        {{ form_errors(form.tickets) }}
        <div class="form-text">Only tickets currently in backlog are listed here.</div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary">Add</button>
</div>
{{ form_end(form, { render_rest: false }) }}
