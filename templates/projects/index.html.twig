{% extends "base.html.twig" %}

{% block body %}
    <div class="row mt-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h4 class="mb-0">Projects</h4>
                <a href="{{ path('project_new') }}" class="btn btn-primary text-white">
                    <img class="button-icon" src="{{ asset('images/icons/plus-lg.svg') }}"/> Create project
                </a>
            </div>
            <table class="mt-3 table table-borderless">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Key</th>
                        <th scope="col">Lead</th>
                        <th scope="col" class="text-end">More actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects %}
                        <tr>
                            <td>{{ project.title }}</td>
                            <td>{{ project.key }}</td>
                            <td>{{ project.createdBy.fullName }}</td>
                            <td class="text-end">
                                <a href="{{ path('dashboard_index', {key: project.key}) }}" class="btn btn-success">
                                    Access dashboard
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}