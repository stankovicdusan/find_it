{% if invites is empty %}
    <div class="p-5 text-center">
        <h5 class="mb-2">No pending invites</h5>
        <div class="text-muted">You have no project invitations at the moment.</div>
    </div>
{% else %}
    <div class="modal-header">
        <h5 class="modal-title">Project invitations</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <div class="list-group">
            {% for pm in invites %}
                <div class="list-group-item d-flex justify-content-between align-items-center flex-wrap gap-2"
                     data-id="{{ pm.id }}"
                     data-accept-url="{{ path('invite_accept', { id: pm.id }) }}"
                     data-decline-url="{{ path('invite_decline', { id: pm.id }) }}"
                     data-token="{{ csrf_token('invite_act_' ~ pm.id) }}">
                    <div>
                        <div class="fw-semibold">{{ pm.project.title }}</div>
                        <div class="small text-muted">{{ pm.project.key }}</div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-secondary js-decline-invite">Decline</button>
                        <button class="btn btn-sm btn-success js-accept-invite">Accept</button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
